<?xml version="1.0" encoding="UTF-8"?>


<odoo>
    <data>
        <!-- Sponsorship relation -->
        <record id="action_sponsorship_relationship" model="ir.actions.act_window">
            <field name="name">Parrainer</field>
            <field name="res_model">sponsorship.relationship</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Action to create contaxt wizard -->
        <record id="action_create_contact_wizard" model="ir.actions.act_window">
            <field name="name">Créer contact</field>
            <field name="res_model">sponsor.wizard.create.sponsored</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Action for sponsorship redemption -->
        <record id="action_sponsorship_redemption" model="ir.actions.act_window">
            <field name="name">Récompenses</field>
            <field name="res_model">sponsorship.redemption</field>
            <field name="view_mode">list,form</field>
        </record> 
        <!-- Action for sponsorship type -->
         <record id="action_sponsorship_type" model="ir.actions.act_window">
            <field name="name">Type de parrainage</field>
            <field name="res_model">sponsorship.type</field>
            <field name="view_mode">list,form</field>
         </record>
         <!-- Action for sponsorship reward type -->
          <record id="action_sponsorship_reward_type" model="ir.actions.act_window">
            <field name="name">Type de Récompense</field>
            <field name="res_model">sponsorship.reward.type</field>
            <field name="view_mode">list,form</field>
          </record>
    </data>
</odoo>