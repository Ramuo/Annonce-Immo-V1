<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="sponsorship_type_view_tree" model="ir.ui.view">
            <field name="name">sponsorship.type.tree</field>
            <field name="model">sponsorship.type</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="sponsorship_type_view_form" model="ir.ui.view">
            <field name="name">sponsorship.type.form</field>
            <field name="model">sponsorship.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>