<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Tree View -->
    <record id="bien_view_tree" model="ir.ui.view">
        <field name="name">bien.immobilier.tree</field>
        <field name="model">bien.immobilier</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="best_offer"/>
                <field name="selling_price"/>
            </list>
        </field>
    </record>
    
    <!-- Form view -->
    <record id="bien_view_form" model="ir.ui.view">
      <field name="name">bien.immobilier.form</field>
      <field name="model">bien.immobilier</field>
      <field name="arch" type="xml">
        <form string="Bien Immobilier">
          <sheet>
            <group>
                <field name="name" placeholder="Nom"/>
                <group>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                </group>
                <group>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action Window -->
    <record id="action_bien_immobilier" model="ir.actions.act_window">
        <field name="name">Biens Immobiliers</field>
        <field name="res_model">bien.immobilier</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref='bien_view_tree'/>
    </record>
  </data>
</odoo>
