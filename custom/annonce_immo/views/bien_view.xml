<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- TREE VIEW -->
    <record id="bien_view_tree" model="ir.ui.view">
        <field name="name">bien.immobilier.tree</field>
        <field name="model">bien.immobilier</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name='type_id'/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="best_offer"/>
                <field name="selling_price"/>
            </list>
        </field>
    </record>
    
    <!-- FORM VIEW -->
    <record id="bien_view_form" model="ir.ui.view">
      <field name="name">bien.immobilier.form</field>
      <field name="model">bien.immobilier</field>
      <field name="arch" type="xml">
        <form string="Bien Immobilier">
          <!-- Form Header -->
          <header>
            <button name="action_sold" type="object" string="Vendu" class="btn btn-primary"/>
            <button name="action_cancel" type="object" string="Annuler" class="btn btn-danger"/>
            <!-- <button name="" type="action" string="" class="btn btn-primary"/> -->
            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button class="oe_stat_button" name="action_property_view_offers" type="object" icon="fa-handshake-o" help="Voire les offres">
                <field name="offer_count" string="Offers" widget="statinfo"/>
              </button>
            </div>
            <group>
                <field name="name"/>
                <field name='particularite_ids' widget='many2many_tags' placeholder="ParticularitÃ©s du Bien" options="{'color_field': 'color'}"/>
                <group>
                    <field name='type_id'/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                </group>
                <group>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                </group>
            </group>
            <!-- Notebook -->
            <notebook>
              <!-- Page Description -->
              <page string="Description">
                <group>
                  <field name="description"/>
                  <field name="bedrooms"/>
                  <field name="living_area"/>
                  <field name="facades"/>
                  <field name="garage"/>
                  <field name="garden"/>
                  <field name="garden_area"/>
                  <field name="garden_orientation"/>
                  <field name="total_erea"/>
                </group>
              </page>
              <!-- Page Offers => One2many -->
              <page string="Offers">
                <field name="offers_ids">
                  <list editable="bottom">
                    <field name='price'/>
                    <field name='partner_id'/>
                    <field name="creation_date"/>
                    <field name='validity'/>
                    <field name='deadline'/>
                    <field name='status'/>
                  </list>
                </field>
              </page>
              <!-- Page Other Info -->
              <page string="Other Info">
                <group>
                  <field name="sales_id"/>
                  <field name="buyer_id"/>
                  <field name="phone"/>
                </group>
              </page> 
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
